# from jeetworks.org/grokking-tl

# be 8-bit clean
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

# use vi mode for readline
set editing-mode vi
# set keymap vi-command

# keep some emacs keybindings
## C-a and HOME: insert at beginning of line
bind -m vi-command 'Control-a: vi-insert-beg'
## C-E and END: append at end of line
bind -m vi-command 'Control-e: vi-append-eol'
## switch to emacs editing mode
bind -m vi-command '"ZZ"': emacs-editing-mode'
## up arrow or PgUp: append to previous history line
bind -m vi-insert '"\M-[A": ""' #
